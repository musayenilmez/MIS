<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yenilmez.mis.testOyunuActivity"
    tools:layout_editor_absoluteY="81dp">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="360dp"
        android:layout_height="228dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:columnCount="2"
        android:rowCount="2"
        android:splitMotionEvents="false"
        app:layout_constraintBottom_toTopOf="@+id/tw_Anlamlar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_sik1"
            android:layout_width="180dp"
            android:layout_height="114dp"
            android:text="sik1" />

        <Button
            android:id="@+id/btn_sik2"
            android:layout_width="180dp"
            android:layout_height="114dp"
            android:text="sik2" />

        <Button
            android:id="@+id/btn_sik3"
            android:layout_width="180dp"
            android:layout_height="114dp"
            android:text="sik3" />

        <Button
            android:id="@+id/btn_sik4"
            android:layout_width="180dp"
            android:layout_height="114dp"
            android:text="sik4" />
    </GridLayout>

    <TextView
        android:id="@+id/tw_Anlamlar"
        android:layout_width="358dp"
        android:layout_height="0dp"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="16dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/tVRekor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="8dp"
        android:text="Rekor : 0"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tVSkor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="skor : 0"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
